{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "resources/js/**/*", "resources/js/typings/modules.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./resources/js/*"],
      "./*": ["./resources/js/*"]
    }
  }
}
